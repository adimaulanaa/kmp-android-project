<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Theme utama Android (hanya wrapper, UI tetap Compose) -->
    <style name="Theme.MyApp" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- kosong tidak masalah -->
    </style>

    <!-- Theme Splash -->
    <style name="Theme.MyApp.Splash" parent="Theme.SplashScreen">

        <!-- Background splash in colors.xml -->
        <item name="windowSplashScreenBackground">@color/primary</item>

        <!-- Logo splash -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_logo</item>

        <!-- Theme setelah splash -->
        <item name="postSplashScreenTheme">@style/Theme.MyApp</item>

    </style>

</resources>
